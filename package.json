    "chalk": "^2.4.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/node": "^12.20.55",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
