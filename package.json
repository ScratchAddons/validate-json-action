{
  "name": "@scratchaddons/validate-json-action",
  "version": "0.0.1",
  "private": true,
  "description": "A Github action for validating JSON",
  "main": "lib/main.js",
  "scripts": {
    "start": "node lib/main.js",
    "build": "tsc -p tsconfig.build.json",
